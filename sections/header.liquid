<nav class="flex items-center justify-between">
  <a href="/">{{ shop.name }}</a>
  <ul class="flex gap-3">
    {% for link in linklists['main-menu'].links %}
      <li>
        <a href="{{ link.url }}">
          {{ link.title }}
        </a>
      </li>
    {% endfor %}
  </ul>

  <div>
    <i class="fa-solid text-xl cursor-pointer fa-magnifying-glass"></i>
    <li class="font-sans block mt-4 lg:inline-block lg:mt-0 lg:ml-6 align-middle text-black hover:text-gray-700">
      <a href="/cart" role="button" class="relative flex">
        <i class="fa-solid text-xl fa-cart-shopping"></i>
        {% unless cart.empty? %}
          <span class="absolute right-0 top-0 rounded-full bg-red-600 w-4 h-4 top right p-0 m-0 text-white font-mono text-sm  leading-tight text-center">
            {{ cart.item_count }}
          </span>
        {% endunless %}
      </a>
    </li>
  </div>
</nav>