  <i class="fa-solid text-2xl fa-arrow-left"></i>
</button>

<button id="plusBtn" class=" top-[44vh] p-3 right-0 bg-black text-white">
  <i class="fa-solid text-2xl fa-arrow-right"></i>
</button>

<div class="relative">

    <div class="overflow-hidden relative h-[620px]">
      <div class="absolute duration-1000 w-[100%] slide">
        <div class="relative ">
          <h1 class="text-6xl text-center bottom-[35%] top-[40%] right-[30%] left-[30%] absolute">Hello Boys</h1>

          <div class="text-center right-[30%] left-[30%] bottom-0 absolute">
            <h1 class="text-5xl">2 / 2</h1>
            <h3 class="text-4xl">Hey boys</h3>
            <h4>The optional</h4>
          </div>

          <img class="px-5 w-full" src="https://dummyimage.com/1224x620/ddd/000" alt="">
        </div>
      </div>

      <div class="absolute duration-1000 transition w-[100%] slide">
        <div class="relative">
          <h1 class="text-6xl text-center bottom-[35%] top-[40%] right-[30%] left-[30%] absolute">Spring girls</h1>

          <div class="text-center right-[30%] left-[30%] bottom-0 absolute">
            <h1 class="text-5xl">1 / 2</h1>
            <h3 class="text-4xl">The title</h3>
            <h4>The description</h4>
          </div>

          <img class="px-5 w-full" src="https://dummyimage.com/1224x620/ddd/000" alt="">
        </div>
      </div>
    </div>

</div>

<script src="{{'carusel.js'|asset_url}}"></script>

{% schema %}
{
  "name": "Image hero",
  "max_blocks": 3,
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_image",
          "label": "Banner Image"
        },
        {
          "type": "url",
          "id": "redirect_url",
          "label": "Redirect URL"
        },
        {
          "type": "text",
          "id": "banner_title",
          "label": "Banner title",
          "default": "New this week"
        },
        {
          "type": "text",
          "id": "banner_subtitle",
          "label": "Banner subtitle",
          "default": "Spring Girls"
        },
        {
          "type": "textarea",
          "id": "banner_description",
          "label": "Banner description",
          "default": "Lookbook 2015"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image hero"
    }
  ]
}
{% endschema %}
