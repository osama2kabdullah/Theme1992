<div class="relative">
  <img class="w-full" src="{{collection.featured_image | img_url: '1224x'}}" alt="">
  <div class="absolute top-[50%] left-[50%] text-center">
    <h1 class="text-4xl">{{ collection.title }}</h1>
    <h3 class="text-2xl">{{section.settings.subtitle_of_collection_featured}}</h3>
  </div>
</div>

{% schema %}
{
  "name": "Collection featured",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "subtitle_of_collection_featured",
      "label": "Subtitle of collection featured",
      "default": "30% off"
    }
  ]
}
{% endschema %}